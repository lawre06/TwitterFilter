{
  "name": "Twitter Filter",
  "description": "Twitter Filter",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["storage", "activeTab", "tabs"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.towardsai.net/*",
        "https://*.towardsdatascience.com/*",
        "https://*.levelup.gitconnected.com/*"
      ],
      "css": ["styles/index.css"],
      "js": [
        "scripts/index.js"
      ]
    }
  ]
}